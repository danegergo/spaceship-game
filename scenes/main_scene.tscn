script/source = "extends ProgressBar

const TICK = 0.02
var timer = Timer.new()
var time

func _ready():
	timer.wait_time = TICK
	timer.connect('timeout', progress_bar_tick)
	add_child(timer)
	
func start(cooldown_time: float):
	time = cooldown_time
	visible = true
	timer.start()
	
func progress_bar_tick():
	if value <= 0:
		timer.stop()
		value = 100
		visible = false
		return
	value -= 100 / (time / TICK)
"

